{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "/*": ["./*"]
    },
    "jsx": "preserve",
    "checkJs": true,
    "allowJs": true,
    "noEmit": true
  },
  "include": [
    "index.d.ts",
    "src/**/*"
  ],
  "exclude": ["node_modules", "public", ".cache", "dist"]
}
