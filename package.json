{
  "version": "1.0.0",
  "name": "hyperapp-starter",
  "description": "Hyperapp PWA starter",
  "author": "Alexandre Lotte <dev@alexlotte.ca>",
  "scripts": {
    "start": "vite src --config vite.config.js",
    "build": "vite build src/index.html",
    "prerender": "npm run build && hyperstatic",
    "lint": "eslint \"./src/**/*.{js,jsx}\" --fix",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "render-pages": "npm run build && node ./render-pages.js"
  },
  "dependencies": {
    "hyperapp": "^2.0.8",
    "hyperapp-jsx-pragma": "^1.3.0",
    "hyperstatic": "^2.0.3",
    "sanitize.css": "^12.0.1"
  },
  "devDependencies": {
    "postcss-nested": "^5.0.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.3",
    "vite": "^2.1.5"
  },
  "browserslist": [
    "last 1 Chrome version"
  ]
}
